{
  "extends": "../apps/backend/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": "..",
    "paths": {
      "@/*": ["apps/backend/src/*"]
    },
    "module": "commonjs",
    "target": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["index.ts", "../apps/backend/src/**/*"],
  "exclude": ["node_modules", "dist"]
}
