{
  "name": "@spa-hackathon/backend",
  "version": "0.1.0",
  "description": "Backend API for Beauty Clinic Care Website",
  "main": "dist/server.js",
  "private": true,
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "echo \"No tests configured yet\"",
    "test:db": "ts-node -r dotenv/config src/scripts/testDatabaseConnection.ts",
    "test:auth": "ts-node -r dotenv/config src/scripts/testSupabaseAuth.ts",
    "test:storage": "ts-node -r dotenv/config src/scripts/testSupabaseStorage.ts"
  },
  "keywords": [
    "express",
    "backend",
    "api"
  ],
  "author": "Spa Hackathon Team",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.3.0",
    "helmet": "^8.1.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/helmet": "^0.0.48",
    "@types/node": "^24.9.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
